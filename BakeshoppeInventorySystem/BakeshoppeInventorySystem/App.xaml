<Application
    x:Class="BakeshoppeInventorySystem.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BakeshoppeInventorySystem"
    xmlns:modules="clr-namespace:BakeshoppeInventorySystem.Modules"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <modules:ViewModelLocator x:Key="Locator" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/BakeshoppeResourceDictionary.xaml" />
                <ResourceDictionary Source="ValueConverters/Converters.xaml" />
                <ResourceDictionary Source="Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
